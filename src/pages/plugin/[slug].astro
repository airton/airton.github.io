---
import Layout from "../../layouts/Layout.astro";
import { plugins } from "../../data/plugins";
import { Button } from "@/components/ui/button";
import { Card, CardContent } from "@/components/ui/card";
import {
  IconBrandWordpress,
  IconArrowLeft,
  IconDownload,
  IconCircleCheck,
  IconQuestionMark,
} from "@tabler/icons-react";

export async function getStaticPaths() {
  return plugins.map((plugin) => ({
    params: { slug: plugin.slug },
    props: { plugin },
  }));
}

const { plugin } = Astro.props;

const getPluginBannerImageUrl = (slug: string) =>
  `https://ps.w.org/${slug}/assets/banner-772x250.png`;

const pluginImageUrl = getPluginBannerImageUrl(plugin.slug);
---

<Layout
  title={`${plugin.name} - WordPress Plugin | Airton Vancin`}
  description={plugin.desc}
  image={pluginImageUrl}
>
  <div class="bg-slate-50/50 border-b border-slate-100">
    <div class="container px-4 md:px-6 py-12 md:py-20 max-w-6xl mx-auto">
      <a
        href="/#wp-plugins"
        class="inline-flex items-center text-sm font-medium text-slate-500 hover:text-blue-600 mb-12 transition-colors group"
      >
        <IconArrowLeft
          className="mr-2 h-4 w-4 transform group-hover:-translate-x-1 transition-transform"
        />
        Back to plugins
      </a>

      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="space-y-6">
          <div
            class="inline-flex items-center gap-2 bg-blue-50 text-blue-600 px-3 py-1 rounded-full text-xs font-bold tracking-widest uppercase"
          >
            <IconBrandWordpress className="w-3.5 h-3.5" />
            WordPress Plugin
          </div>
          <h1
            class="text-4xl md:text-6xl font-bold tracking-tight text-slate-900 leading-tight"
          >
            {plugin.name}
          </h1>
          <p class="text-xl text-slate-600 leading-relaxed font-serif italic">
            {plugin.desc}
          </p>
          <div class="flex flex-wrap gap-4 pt-4">
            <Button
              size="lg"
              className="rounded-full px-8 h-14 text-base font-bold shadow-lg shadow-blue-500/20"
              asChild
            >
              <a href={plugin.link} target="_blank" rel="noopener noreferrer">
                Download on WP.org <IconDownload className="ml-2 h-5 w-5" />
              </a>
            </Button>
            <div
              class="flex items-center px-4 py-2 bg-white border border-slate-200 rounded-full text-sm text-slate-500 font-medium"
            >
              <span class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"
              ></span>
              Verificado & Seguro
            </div>
          </div>
        </div>

        <div class="relative group">
          <div
            class="absolute -inset-4 bg-gradient-to-tr from-blue-500/10 to-purple-500/10 rounded-[2rem] blur-2xl group-hover:opacity-75 transition-opacity"
          >
          </div>
          <div
            class="relative overflow-hidden rounded-[1.5rem] border border-slate-200 shadow-2xl skew-y-1 group-hover:skew-y-0 transition-transform duration-700"
          >
            <img
              src={pluginImageUrl}
              alt={plugin.name}
              class="w-full aspect-[772/250] object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container px-4 md:px-6 py-20 max-w-4xl mx-auto">
    <div class="grid gap-24">
      <!-- Description -->
      <section
        class="prose prose-slate dark:prose-invert max-w-none prose-headings:text-slate-900 prose-p:text-slate-600 prose-p:leading-relaxed prose-li:text-slate-600"
      >
        <div set:html={plugin.fullDescription} />
      </section>

      <!-- Features -->
      <section>
        <div class="flex items-center gap-4 mb-10">
          <h2 class="text-3xl font-bold text-slate-900">Key Features</h2>
          <div class="h-px flex-grow bg-slate-100"></div>
        </div>
        <div class="grid sm:grid-cols-2 gap-6">
          {
            plugin.features.map((feature) => (
              <div class="group p-6 bg-white border border-slate-100 rounded-2xl shadow-sm hover:shadow-md hover:border-blue-100 transition-all flex items-start gap-4">
                <div class="p-2 bg-blue-50 rounded-lg text-blue-500">
                  <IconCircleCheck className="w-5 h-5" />
                </div>
                <span class="text-slate-600 font-medium leading-tight pt-1">
                  {feature}
                </span>
              </div>
            ))
          }
        </div>
      </section>

      <!-- Installation -->
      <section class="relative">
        <div class="flex items-center gap-4 mb-10">
          <h2 class="text-3xl font-bold text-slate-900">Installation Guide</h2>
          <div class="h-px flex-grow bg-slate-100"></div>
        </div>

        <div
          class="bg-white border border-slate-100 rounded-[2rem] p-8 md:p-12 shadow-sm relative overflow-hidden group"
        >
          <div
            class="absolute top-0 right-0 w-32 h-32 bg-blue-50/50 rounded-full -mr-16 -mt-16 transition-transform group-hover:scale-110 duration-700"
          >
          </div>

          <div
            class="prose prose-slate max-w-none relative prose-ol:list-decimal prose-ol:pl-6 prose-li:mb-6 prose-li:text-slate-600 prose-li:marker:text-blue-500 prose-li:marker:font-bold prose-strong:text-slate-900"
            set:html={plugin.installation}
          />
        </div>
      </section>

      <!-- FAQ -->
      {
        plugin.faq && plugin.faq.length > 0 && (
          <section>
            <div class="flex items-center gap-4 mb-10">
              <h2 class="text-3xl font-bold text-slate-900">FAQ</h2>
              <div class="h-px flex-grow bg-slate-100" />
            </div>
            <div class="grid gap-6">
              {plugin.faq.map((item) => (
                <div class="bg-white border border-slate-100 p-8 rounded-3xl hover:border-blue-100 transition-colors shadow-sm">
                  <div class="flex items-start gap-4 mb-4">
                    <div class="w-10 h-10 shrink-0 bg-slate-50 flex items-center justify-center rounded-xl text-slate-400">
                      <IconQuestionMark className="w-5 h-5" />
                    </div>
                    <h3 class="text-xl font-bold text-slate-900 pt-1">
                      {item.question}
                    </h3>
                  </div>
                  <p class="text-slate-600 leading-relaxed ml-14">
                    {item.answer}
                  </p>
                </div>
              ))}
            </div>
          </section>
        )
      }
    </div>
  </div>

  <!-- Buy Me a Coffee Interstitial Modal -->
  <div
    id="bmc-modal"
    class="fixed inset-0 z-[100] hidden items-center justify-center p-4 bg-slate-900/60 backdrop-blur-sm transition-opacity duration-300 opacity-0"
  >
    <div
      class="bg-white w-full max-w-lg rounded-[2.5rem] shadow-2xl p-8 md:p-12 text-center relative overflow-hidden transform scale-95 transition-transform duration-300"
    >
      <!-- Decoration -->
      <div
        class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-blue-400 via-blue-600 to-purple-500"
      >
      </div>
      <div
        class="absolute -top-12 -right-12 w-48 h-48 bg-blue-50 rounded-full blur-3xl opacity-50"
      >
      </div>

      <div class="relative">
        <div
          class="w-20 h-20 bg-blue-50 rounded-3xl flex items-center justify-center mx-auto mb-8 shadow-inner"
        >
          <IconDownload className="w-10 h-10 text-blue-600" />
        </div>

        <h2 class="text-3xl font-bold text-slate-900 mb-4">
          You're almost there!
        </h2>
        <p class="text-lg text-slate-600 mb-8 leading-relaxed">
          Thank you for choosing my plugin. If you find it useful, consider
          supporting my work with a coffee. It helps me keep building and
          maintaining open-source tools!
        </p>

        <div class="flex flex-col gap-4 items-center">
          <!-- BMC Button -->
          <div class="min-h-[50px] flex items-center justify-center">
            <a href="https://www.buymeacoffee.com/airton" target="_blank"
              ><img
                src="https://cdn.buymeacoffee.com/buttons/v2/default-blue.png"
                alt="Buy Me A Coffee"
                style="height: 60px !important;width: 217px !important;"
              /></a
            >
          </div>

          <div class="w-full flex flex-col gap-4">
            <Button
              id="continue-download"
              size="lg"
              className="w-full rounded-full h-14 text-lg font-bold"
            >
              Continue to Download <IconArrowLeft
                className="ml-2 h-5 w-5 rotate-180"
              />
            </Button>

            <button
              id="close-modal"
              class="text-slate-400 hover:text-slate-600 font-medium text-sm transition-colors"
            >
              Maybe later
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script is:inline>
  const downloadBtn = document.querySelector(
    'a[href*="wordpress.org/plugins/"]'
  );
  const modal = document.getElementById("bmc-modal");
  const continueBtn = document.getElementById("continue-download");
  const closeBtn = document.getElementById("close-modal");

  if (downloadBtn && modal) {
    const pluginUrl = downloadBtn.getAttribute("href");

    downloadBtn.addEventListener("click", (e) => {
      e.preventDefault();

      // Show modal
      modal.classList.remove("hidden");
      modal.classList.add("flex");

      // Animate in
      setTimeout(() => {
        modal.classList.remove("opacity-0");
        modal.querySelector("div").classList.remove("scale-95");
      }, 10);
    });

    const closeModal = () => {
      modal.classList.add("opacity-0");
      modal.querySelector("div").classList.add("scale-95");
      setTimeout(() => {
        modal.classList.add("hidden");
        modal.classList.remove("flex");
      }, 300);
    };

    continueBtn?.addEventListener("click", () => {
      window.open(pluginUrl, "_blank");
      closeModal();
    });

    closeBtn?.addEventListener("click", closeModal);

    modal.addEventListener("click", (e) => {
      if (e.target === modal) closeModal();
    });
  }
</script>

