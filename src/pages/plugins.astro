---
import Layout from "../layouts/Layout.astro";
import { plugins } from "../data/plugins";
import { Card, CardContent } from "@/components/ui/card";
import { IconBrandWordpress, IconArrowRight } from "@tabler/icons-react";
import LanguageSwitcher from "../components/LanguageSwitcher.astro";

const title = {
  en: "WordPress Plugins - Airton Vancin",
  pt: "Plugins WordPress - Airton Vancin"
};

const description = {
  en: "Custom and high-performance WordPress plugins developed for the community.",
  pt: "Plugins WordPress customizados e de alta performance desenvolvidos para a comunidade."
};

const labels = {
  wp_ecosystem: { en: "WordPress Ecosystem", pt: "Ecossistema WordPress" },
  open_source: { en: "Open Source Plugins", pt: "Plugins Open Source" },
  extending: { en: "Extending WordPress with performance-driven and user-centric solutions.", pt: "Expandindo o WordPress com soluções focadas em performance e no usuário." },
  installations: { en: "Over thousands of active installations across the WP directory.", pt: "Mais de milhares de instalações ativas no diretório do WP." },
  explore: { en: "Explore details", pt: "Ver detalhes" },
  plugin: { en: "Plugin", pt: "Plugin" }
};
---

<Layout
  title={title.en}
  description={description.en}
>
  <section class="w-full py-20 md:py-32 bg-slate-50/50 flex justify-center border-t border-slate-100 min-h-screen">
    <div class="container px-4 md:px-6 max-w-7xl">
      <!-- Header -->
      <div class="flex flex-col md:flex-row md:items-end justify-between mb-12 gap-6">
        <div class="max-w-2xl">
          <div class="inline-flex items-center gap-2 text-blue-600 font-medium text-sm tracking-wider uppercase mb-3">
            <IconBrandWordpress className="w-4 h-4" />
            <span data-en={labels.wp_ecosystem.en} data-pt={labels.wp_ecosystem.pt}>{labels.wp_ecosystem.en}</span>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold tracking-tight text-slate-900 mb-4" data-en={labels.open_source.en} data-pt={labels.open_source.pt}>
            {labels.open_source.en}
          </h1>
          <p class="text-lg text-slate-500 italic font-serif" data-en={labels.extending.en} data-pt={labels.extending.pt}>
            {labels.extending.en}
          </p>
        </div>
        <div class="hidden md:block">
          <p class="text-slate-400 text-sm max-w-[200px] text-right" data-en={labels.installations.en} data-pt={labels.installations.pt}>
            {labels.installations.en}
          </p>
        </div>
      </div>

      <!-- Plugins Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          plugins.map(({ name, en, pt, slug }) => (
            <a href={`/plugin/${slug}`} class="group block h-full">
              <Card className="h-full bg-white border-transparent shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] hover:shadow-[0_20px_40px_-10px_rgba(0,0,0,0.1)] group-hover:-translate-y-1 transition-all duration-500 rounded-3xl overflow-hidden flex flex-col">
                <CardContent className="p-8 flex-grow flex flex-col">
                  <!-- Icon & Category -->
                  <div class="flex items-center justify-between mb-8">
                    <div class="w-12 h-12 bg-slate-50 rounded-2xl flex items-center justify-center group-hover:bg-blue-50 transition-colors duration-500">
                      <IconBrandWordpress className="w-6 h-6 text-slate-400 group-hover:text-blue-500 transition-colors duration-500" aria-label="WordPress Logo" />
                    </div>
                    <span class="text-[10px] uppercase tracking-widest font-bold text-slate-300" data-en={labels.plugin.en} data-pt={labels.plugin.pt}>{labels.plugin.en}</span>
                  </div>
                  
                  <!-- Content -->
                  <h3 class="text-xl font-bold text-slate-900 mb-3 group-hover:text-blue-600 transition-colors duration-300 decoration-blue-600/30 underline-offset-4 group-hover:underline">
                    {name}
                  </h3>
                  <p class="text-slate-500 text-sm leading-relaxed line-clamp-3 mb-6 flex-grow" data-en={en.desc} data-pt={pt.desc}>
                    {en.desc}
                  </p>
                  
                  <!-- Footer -->
                  <div class="flex items-center text-sm font-semibold text-slate-900 mt-auto">
                    <span class="mr-2" data-en={labels.explore.en} data-pt={labels.explore.pt}>{labels.explore.en}</span>
                    <IconArrowRight className="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300 text-blue-500" />
                  </div>
                </CardContent>
              </Card>
            </a>
          ))
        }
      </div>
    </div>
  </section>
  <LanguageSwitcher />
</Layout>
