---
import Layout from "@/layouts/Layout.astro";
import PostCard from "@/components/PostCard.astro";
import ZeroDowntimeCTA from "@/components/ZeroDowntimeCTA.astro";
import { getCollection } from "astro:content";
import { dateFormat } from "@/helpers/dateFormat";
import { Button } from "@/components/ui/button";
import { IconArrowRight, IconCalendar } from "@tabler/icons-react";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

const featuredPost = posts[0];
const remainingPosts = posts.slice(1);
---

<Layout
  title="Blog & Artigos de Tecnologia | Airton Vancin"
  description="Explore artigos sobre desenvolvimento web, arquitetura de software, DevOps e as últimas tendências em tecnologia no blog de Airton Vancin."
>
  <section
    class="w-full py-12 md:py-24 lg:py-32 bg-background flex flex-col items-center"
  >
    <div class="container px-4 md:px-6">
      <div class="max-w-3xl mx-auto text-center mb-12 lg:mb-20">
        <h1
          class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl mb-6"
        >
          Blog & Artigos
        </h1>
        <p class="text-xl text-muted-foreground">
          Compartilhando conhecimentos sobre desenvolvimento web, arquitetura de
          software e tecnologia.
        </p>
      </div>

      {
        featuredPost && (
          <div class="mb-16 lg:mb-24">
            <h2 class="text-2xl font-semibold mb-6 flex items-center gap-2">
              <span class="w-2 h-8 bg-primary rounded-full" />
              Destaque
            </h2>
            <div class="group relative overflow-hidden rounded-2xl border bg-card text-card-foreground shadow-sm transition-all hover:shadow-md grid lg:grid-cols-2 gap-0 lg:gap-8">
              <div class="relative aspect-video lg:aspect-auto lg:h-full overflow-hidden">
                <img
                  src={
                    featuredPost.data.image ||
                    "/assets/images/blog/code-minimalist.jpg"
                  }
                  alt={`Cover image for the article: ${featuredPost.data.title}`}
                  class="object-cover w-full h-full transition-transform duration-700 group-hover:scale-105"
                  loading="eager"
                  width="800"
                  height="450"
                />
              </div>
              <div class="p-6 md:p-10 flex flex-col justify-center">
                <div class="flex items-center gap-2 text-sm text-muted-foreground mb-4">
                  <IconCalendar className="w-4 h-4" />
                  <time datetime={featuredPost.data.date.toISOString()}>
                    {dateFormat(featuredPost.data.date)}
                  </time>
                </div>
                <h3 class="text-2xl md:text-3xl font-bold mb-4 group-hover:text-primary transition-colors">
                  <a href={`/blog/${featuredPost.id}`}>
                    {featuredPost.data.title}
                  </a>
                </h3>
                <p class="text-muted-foreground text-lg mb-6 line-clamp-3">
                  {featuredPost.data.description}
                </p>
                <div>
                  <a href={`/blog/${featuredPost.id}`}>
                    <Button
                      variant="default"
                      size="lg"
                      className="rounded-full px-8"
                    >
                      Ler artigo completo
                    </Button>
                  </a>
                </div>
              </div>
            </div>
          </div>
        )
      }

      <div>
        <h2 class="text-2xl font-semibold mb-6 flex items-center gap-2">
          <span class="w-2 h-8 bg-muted rounded-full"></span>
          Últimos Artigos
        </h2>
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {remainingPosts.map((post) => <PostCard post={post} />)}
        </div>
      </div>
    </div>
  </section>
  <ZeroDowntimeCTA />
</Layout>
