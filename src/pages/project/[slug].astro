---
import Layout from "../../layouts/Layout.astro";
import { projects } from "../../data/projects";
import { Button } from "@/components/ui/button";
import { Card, CardContent } from "@/components/ui/card";
import {
  IconArrowLeft,
  IconExternalLink,
  IconCircleCheck,
  IconQuestionMark,
  IconLayersIntersect,
} from "@tabler/icons-react";

export async function getStaticPaths() {
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
---

<Layout>
  <div class="bg-white border-b border-slate-100">
    <div class="container px-4 md:px-6 py-12 md:py-20 max-w-6xl mx-auto">
      <a
        href="/#projects"
        class="inline-flex items-center text-sm font-medium text-slate-500 hover:text-indigo-600 mb-12 transition-colors group"
      >
        <IconArrowLeft
          className="mr-2 h-4 w-4 transform group-hover:-translate-x-1 transition-transform"
        />
        Back to projects
      </a>

      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="space-y-8">
          <div
            class="inline-flex items-center gap-2 bg-indigo-50 text-indigo-600 px-3 py-1 rounded-full text-xs font-bold tracking-widest uppercase"
          >
            <IconLayersIntersect className="w-3.5 h-3.5" />
            Featured Project
          </div>

          <div class="space-y-4">
            <h1
              class="text-4xl md:text-6xl font-bold tracking-tight text-slate-900 leading-[1.1]"
            >
              {project.name}
            </h1>
            <p class="text-xl text-slate-600 leading-relaxed font-serif italic">
              {project.desc}
            </p>
          </div>

          <div class="flex flex-wrap gap-4 pt-4">
            <Button
              size="lg"
              className="rounded-full px-8 h-14 text-base font-bold shadow-lg shadow-indigo-500/20 bg-indigo-600 hover:bg-indigo-700"
              asChild
            >
              <a href={project.link} target="_blank" rel="noopener noreferrer">
                Visit Project <IconExternalLink className="ml-2 h-5 w-5" />
              </a>
            </Button>
            {
              project.technologies &&
                project.technologies
                  .slice(0, 3)
                  .map((tech) => (
                    <div class="hidden sm:flex items-center px-5 py-2 bg-slate-50 border border-slate-100 rounded-full text-sm text-slate-500 font-bold tracking-tight uppercase">
                      {tech}
                    </div>
                  ))
            }
          </div>
        </div>

        <div class="relative group">
          <div
            class="absolute -inset-6 bg-gradient-to-tr from-indigo-500/10 to-purple-500/10 rounded-[3rem] blur-3xl group-hover:opacity-100 transition-opacity"
          >
          </div>
          <div
            class="relative overflow-hidden rounded-[2.5rem] border border-slate-100 shadow-2xl transition-all duration-700 group-hover:scale-[1.02]"
          >
            <img
              src={`https://picsum.photos/id/${project.image}/1000/700?grayscale`}
              alt={project.name}
              class="w-full aspect-[4/3] object-cover grayscale transition-all duration-1000 group-hover:grayscale-0"
            />
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container px-4 md:px-6 py-24 max-w-4xl mx-auto">
    <div class="grid gap-24">
      <!-- Description -->
      <section
        class="prose prose-slate lg:prose-lg max-w-none prose-headings:text-slate-900 prose-p:text-slate-600 prose-p:leading-relaxed prose-li:text-slate-600 prose-strong:text-slate-900"
      >
        <div set:html={project.fullDescription} />
      </section>

      <!-- Technologies -->
      {
        project.technologies && project.technologies.length > 0 && (
          <section>
            <div class="flex items-center gap-4 mb-10">
              <h2 class="text-3xl font-bold text-slate-900">Tech Stack</h2>
              <div class="h-px flex-grow bg-slate-100" />
            </div>
            <div class="flex flex-wrap gap-3">
              {project.technologies.map((tech) => (
                <div class="px-6 py-3 bg-white border border-slate-100 rounded-2xl text-sm font-bold text-slate-700 shadow-sm hover:border-indigo-200 hover:text-indigo-600 transition-all cursor-default">
                  {tech}
                </div>
              ))}
            </div>
          </section>
        )
      }

      <!-- Features -->
      <section>
        <div class="flex items-center gap-4 mb-10">
          <h2 class="text-3xl font-bold text-slate-900">Core Features</h2>
          <div class="h-px flex-grow bg-slate-100"></div>
        </div>
        <div class="grid sm:grid-cols-2 gap-6">
          {
            project.features.map((feature) => (
              <div class="group p-8 bg-white border border-slate-100 rounded-[2rem] shadow-sm hover:shadow-md hover:border-indigo-100 transition-all flex items-start gap-5">
                <div class="p-3 bg-indigo-50 rounded-2xl text-indigo-500 group-hover:bg-indigo-600 group-hover:text-white transition-colors duration-300">
                  <IconCircleCheck className="w-6 h-6" />
                </div>
                <span class="text-slate-600 font-semibold leading-relaxed pt-1">
                  {feature}
                </span>
              </div>
            ))
          }
        </div>
      </section>

      <!-- FAQ -->
      {
        project.faq && project.faq.length > 0 && (
          <section>
            <div class="flex items-center gap-4 mb-10">
              <h2 class="text-3xl font-bold text-slate-900">
                Common Questions
              </h2>
              <div class="h-px flex-grow bg-slate-100" />
            </div>
            <div class="grid gap-8">
              {project.faq.map((item) => (
                <div class="bg-slate-50 border border-transparent p-10 rounded-[2.5rem] hover:bg-white hover:border-slate-100 transition-all duration-300 shadow-sm group">
                  <div class="flex items-start gap-5 mb-6">
                    <div class="w-12 h-12 shrink-0 bg-white shadow-sm flex items-center justify-center rounded-2xl text-slate-400 group-hover:text-indigo-500 transition-colors">
                      <IconQuestionMark className="w-6 h-6" />
                    </div>
                    <h3 class="text-2xl font-bold text-slate-900 pt-2 tracking-tight group-hover:text-indigo-900">
                      {item.question}
                    </h3>
                  </div>
                  <p class="text-lg text-slate-500 leading-relaxed ml-16">
                    {item.answer}
                  </p>
                </div>
              ))}
            </div>
          </section>
        )
      }
    </div>
  </div>
</Layout>
