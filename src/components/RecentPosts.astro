---
import type { MarkdownInstance } from "astro";

interface Props {
  posts: MarkdownInstance<Record<string, any>>[];
  title?: string;
}

const { posts, title = "Ãšltimos Posts" } = Astro.props;
---

<div class="w-full bg-white py-12">
  <div class="container px-4 md:px-6 max-w-4xl mx-auto">
    <h2 class="text-2xl font-bold mb-6 text-slate-900">
      {title}
    </h2>
    <div class="grid gap-6">
      {
        posts.map((post) => (
          <a
            href={post.url}
            class="block p-4 border border-slate-200 rounded-lg hover:bg-slate-50 transition-colors"
          >
            <h3 class="text-xl font-semibold text-slate-900 mb-2">
              {post.frontmatter.title}
            </h3>
            <p class="text-slate-700">{post.frontmatter.description}</p>
          </a>
        ))
      }
    </div>
  </div>
</div>
