---
/**
 * HeroHeadline - Modern, minimalist headline section
 * Elegant aurora wave animation background
 */
---

<section class="hero-headline">
  <!-- Aurora wave animated background -->
  <div class="hero-bg" aria-hidden="true">
    <!-- Morphing gradient blobs -->
    <div class="aurora">
      <div class="aurora-layer aurora-layer--1"></div>
      <div class="aurora-layer aurora-layer--2"></div>
      <div class="aurora-layer aurora-layer--3"></div>
    </div>

    <!-- Subtle particle dots -->
    <div class="particles">
      <div
        class="particle"
        style="--x: 10%; --y: 20%; --size: 3px; --duration: 20s; --delay: 0s;"
      >
      </div>
      <div
        class="particle"
        style="--x: 85%; --y: 15%; --size: 2px; --duration: 25s; --delay: 2s;"
      >
      </div>
      <div
        class="particle"
        style="--x: 25%; --y: 70%; --size: 2px; --duration: 22s; --delay: 5s;"
      >
      </div>
      <div
        class="particle"
        style="--x: 75%; --y: 65%; --size: 3px; --duration: 18s; --delay: 3s;"
      >
      </div>
      <div
        class="particle"
        style="--x: 50%; --y: 30%; --size: 2px; --duration: 24s; --delay: 1s;"
      >
      </div>
      <div
        class="particle"
        style="--x: 90%; --y: 50%; --size: 2px; --duration: 21s; --delay: 4s;"
      >
      </div>
      <div
        class="particle"
        style="--x: 15%; --y: 45%; --size: 3px; --duration: 23s; --delay: 6s;"
      >
      </div>
    </div>

    <!-- Noise texture overlay -->
    <div class="noise-overlay"></div>
  </div>

  <div class="hero-container">
    <div class="hero-content">
      <!-- Eyebrow text -->
      <span class="hero-eyebrow">
        <span class="hero-eyebrow-dot"></span>
        Software Engineer
      </span>

      <!-- Main headline with animated text -->
      <h1 class="hero-title">
        Transformando ideias em
        <span class="hero-title-highlight">
          <span class="hero-title-gradient">experiências digitais</span>
        </span>
      </h1>

      <!-- Subheadline -->
      <p class="hero-subtitle">
        +15 anos criando soluções que importam.
        <span class="hero-subtitle-emphasis"
          >Código limpo. Performance. Resultados.</span
        >
      </p>

      <!-- CTA buttons -->
      <div class="hero-cta">
        <a href="#projects" class="hero-btn hero-btn--primary">
          Ver Projetos
          <svg
            class="hero-btn-icon"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M5 12h14M12 5l7 7-7 7"></path>
          </svg>
        </a>
        <a href="/contato" class="hero-btn hero-btn--secondary">
          Vamos conversar
        </a>
      </div>

      <!-- Tech stack badges -->
      <div class="hero-stack">
        <span class="hero-stack-label">Stack atual:</span>
        <div class="hero-stack-items">
          <span class="hero-stack-badge">React</span>
          <span class="hero-stack-badge">TypeScript</span>
          <span class="hero-stack-badge">Node.js</span>
          <span class="hero-stack-badge">Go</span>
          <span class="hero-stack-badge">Python</span>
          <span class="hero-stack-badge">WordPress</span>
          <span class="hero-stack-badge">AWS</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-headline {
    position: relative;
    min-height: calc(100vh - 5rem);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 6rem 1.5rem 4rem;
    background: linear-gradient(180deg, #fafafa 0%, #f5f5f5 100%);
  }

  :global(.dark) .hero-headline {
    background: linear-gradient(180deg, #0a0a0a 0%, #111111 100%);
  }

  /* Aurora Background */
  .hero-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }

  .aurora {
    position: absolute;
    inset: -50%;
    width: 200%;
    height: 200%;
  }

  .aurora-layer {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.5;
    mix-blend-mode: normal;
  }

  /* First blob - large, slow moving */
  .aurora-layer--1 {
    width: 60%;
    height: 60%;
    top: -10%;
    right: -15%;
    background: radial-gradient(
      ellipse,
      rgba(99, 102, 241, 0.25) 0%,
      rgba(139, 92, 246, 0.15) 40%,
      transparent 70%
    );
    animation: auroraMove1 15s ease-in-out infinite;
  }

  /* Second blob - medium, diagonal */
  .aurora-layer--2 {
    width: 50%;
    height: 50%;
    bottom: -5%;
    left: -10%;
    background: radial-gradient(
      ellipse,
      rgba(168, 85, 247, 0.2) 0%,
      rgba(236, 72, 153, 0.1) 50%,
      transparent 70%
    );
    animation: auroraMove2 18s ease-in-out infinite;
  }

  /* Third blob - smaller, accent */
  .aurora-layer--3 {
    width: 40%;
    height: 40%;
    top: 30%;
    left: 30%;
    background: radial-gradient(
      ellipse,
      rgba(59, 130, 246, 0.15) 0%,
      rgba(99, 102, 241, 0.1) 50%,
      transparent 70%
    );
    animation: auroraMove3 12s ease-in-out infinite;
  }

  :global(.dark) .aurora-layer--1 {
    background: radial-gradient(
      ellipse,
      rgba(99, 102, 241, 0.35) 0%,
      rgba(139, 92, 246, 0.2) 40%,
      transparent 70%
    );
    opacity: 0.7;
  }

  :global(.dark) .aurora-layer--2 {
    background: radial-gradient(
      ellipse,
      rgba(168, 85, 247, 0.3) 0%,
      rgba(236, 72, 153, 0.15) 50%,
      transparent 70%
    );
    opacity: 0.7;
  }

  :global(.dark) .aurora-layer--3 {
    background: radial-gradient(
      ellipse,
      rgba(59, 130, 246, 0.25) 0%,
      rgba(99, 102, 241, 0.15) 50%,
      transparent 70%
    );
    opacity: 0.7;
  }

  @keyframes auroraMove1 {
    0%,
    100% {
      transform: translate(0, 0) rotate(0deg) scale(1);
    }
    25% {
      transform: translate(-5%, 8%) rotate(5deg) scale(1.05);
    }
    50% {
      transform: translate(-10%, 5%) rotate(-3deg) scale(0.95);
    }
    75% {
      transform: translate(-3%, -5%) rotate(2deg) scale(1.02);
    }
  }

  @keyframes auroraMove2 {
    0%,
    100% {
      transform: translate(0, 0) rotate(0deg) scale(1);
    }
    33% {
      transform: translate(8%, -6%) rotate(-5deg) scale(1.08);
    }
    66% {
      transform: translate(5%, 8%) rotate(3deg) scale(0.92);
    }
  }

  @keyframes auroraMove3 {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }
    50% {
      transform: translate(15%, -10%) scale(1.1);
    }
  }

  /* Floating particles */
  .particles {
    position: absolute;
    inset: 0;
  }

  .particle {
    position: absolute;
    left: var(--x);
    top: var(--y);
    width: var(--size);
    height: var(--size);
    background: #6366f1;
    border-radius: 50%;
    opacity: 0.4;
    animation: particleFloat var(--duration) ease-in-out infinite;
    animation-delay: var(--delay);
  }

  :global(.dark) .particle {
    background: #a5b4fc;
    opacity: 0.5;
  }

  @keyframes particleFloat {
    0%,
    100% {
      transform: translate(0, 0);
      opacity: 0.4;
    }
    25% {
      transform: translate(10px, -20px);
      opacity: 0.6;
    }
    50% {
      transform: translate(-5px, -35px);
      opacity: 0.3;
    }
    75% {
      transform: translate(15px, -15px);
      opacity: 0.5;
    }
  }

  /* Noise texture */
  .noise-overlay {
    position: absolute;
    inset: 0;
    opacity: 0.03;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    pointer-events: none;
  }

  :global(.dark) .noise-overlay {
    opacity: 0.05;
  }

  .hero-container {
    position: relative;
    max-width: 72rem;
    margin: 0 auto;
    width: 100%;
    z-index: 10;
  }

  .hero-content {
    position: relative;
    text-align: center;
  }

  /* Eyebrow */
  .hero-eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #6366f1;
    margin-bottom: 1.5rem;
    animation: fadeInUp 0.6s ease-out;
  }

  .hero-eyebrow-dot {
    width: 8px;
    height: 8px;
    background: #22c55e;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
    box-shadow: 0 0 10px rgba(34, 197, 94, 0.5);
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.7;
      transform: scale(1.15);
    }
  }

  /* Main title */
  .hero-title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: #0f172a;
    margin-bottom: 1.5rem;
    animation: fadeInUp 0.6s ease-out 0.1s both;
  }

  :global(.dark) .hero-title {
    color: #f8fafc;
  }

  .hero-title-highlight {
    display: block;
    margin-top: 0.25rem;
  }

  .hero-title-gradient {
    background: linear-gradient(135deg, #6366f1 0%, #a855f7 50%, #ec4899 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 200% 200%;
    animation: gradientShift 5s ease infinite;
  }

  @keyframes gradientShift {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  /* Subtitle */
  .hero-subtitle {
    font-size: clamp(1.125rem, 3vw, 1.375rem);
    color: #64748b;
    max-width: 36rem;
    margin: 0 auto 2.5rem;
    line-height: 1.6;
    animation: fadeInUp 0.6s ease-out 0.2s both;
  }

  :global(.dark) .hero-subtitle {
    color: #94a3b8;
  }

  .hero-subtitle-emphasis {
    display: block;
    font-weight: 600;
    color: #475569;
    margin-top: 0.5rem;
  }

  :global(.dark) .hero-subtitle-emphasis {
    color: #cbd5e1;
  }

  /* CTA Buttons */
  .hero-cta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 3rem;
    animation: fadeInUp 0.6s ease-out 0.3s both;
  }

  .hero-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.75rem;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 9999px;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .hero-btn--primary {
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    color: #fff;
    box-shadow: 0 4px 20px rgba(99, 102, 241, 0.4);
  }

  .hero-btn--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(99, 102, 241, 0.5);
  }

  .hero-btn-icon {
    width: 1.25rem;
    height: 1.25rem;
    transition: transform 0.3s ease;
  }

  .hero-btn--primary:hover .hero-btn-icon {
    transform: translateX(4px);
  }

  .hero-btn--secondary {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    color: #475569;
    border: 1px solid rgba(0, 0, 0, 0.08);
  }

  :global(.dark) .hero-btn--secondary {
    background: rgba(255, 255, 255, 0.1);
    color: #e2e8f0;
    border-color: rgba(255, 255, 255, 0.1);
  }

  .hero-btn--secondary:hover {
    background: rgba(255, 255, 255, 0.95);
    transform: translateY(-2px);
  }

  :global(.dark) .hero-btn--secondary:hover {
    background: rgba(255, 255, 255, 0.15);
  }

  /* Tech stack */
  .hero-stack {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    animation: fadeInUp 0.6s ease-out 0.4s both;
  }

  .hero-stack-label {
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #94a3b8;
  }

  .hero-stack-items {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: center;
  }

  .hero-stack-badge {
    padding: 0.375rem 0.875rem;
    font-size: 0.8125rem;
    font-weight: 500;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    color: #6366f1;
    border-radius: 9999px;
    border: 1px solid rgba(99, 102, 241, 0.15);
    transition: all 0.2s ease;
  }

  :global(.dark) .hero-stack-badge {
    background: rgba(99, 102, 241, 0.15);
    color: #a5b4fc;
    border-color: rgba(99, 102, 241, 0.25);
  }

  .hero-stack-badge:hover {
    background: rgba(99, 102, 241, 0.1);
    transform: translateY(-1px);
    border-color: rgba(99, 102, 241, 0.3);
  }

  :global(.dark) .hero-stack-badge:hover {
    background: rgba(99, 102, 241, 0.25);
  }

  /* Fade in animation */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .hero-headline {
      min-height: calc(100vh - 4rem);
      padding: 5rem 1rem 3rem;
    }

    .hero-cta {
      flex-direction: column;
      align-items: center;
    }

    .hero-btn {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }

    .aurora-layer {
      filter: blur(60px);
    }
  }
</style>
