---
import { Button } from "@/components/ui/button";
import { Card, CardContent } from "@/components/ui/card";
import { IconBrandWordpress, IconDownload, IconExternalLink, IconStar } from "@tabler/icons-react";
import { plugins } from "../data/plugins";
---

<section
  id="wp-plugins"
  class="w-full py-16 md:py-24 lg:py-32 bg-white flex justify-center"
>
  <div class="container px-4 md:px-6 max-w-7xl">
    <!-- Header -->
    <div class="text-center mb-12 lg:mb-16">
      <div class="inline-flex items-center gap-2 bg-blue-100 text-blue-700 px-4 py-1.5 rounded-full text-sm font-medium mb-4">
        <IconBrandWordpress className="w-4 h-4" />
        WordPress
      </div>
      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl md:text-5xl text-slate-900 mb-4">
        Meus Plugins WordPress
      </h2>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto">
        Plugins desenvolvidos para estender as funcionalidades do WordPress, disponíveis para download.
      </p>
    </div>

    <!-- Plugins Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {
        plugins.map(({ name, desc, slug }) => (
          <a href={`/plugin/${slug}`} class="group block">
            <Card className="h-full bg-white border-slate-200 shadow-sm hover:shadow-xl hover:border-blue-300 transition-all duration-300 overflow-hidden">
              <CardContent className="p-6">
                <!-- Icon Container -->
                <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mb-5 group-hover:scale-110 transition-transform duration-300 shadow-lg shadow-blue-500/25">
                  <IconBrandWordpress className="w-8 h-8 text-white" />
                </div>
                
                <!-- Content -->
                <h3 class="text-lg font-bold text-slate-900 mb-2 group-hover:text-blue-600 transition-colors line-clamp-1">
                  {name}
                </h3>
                <p class="text-slate-600 text-sm line-clamp-3 mb-4 min-h-[60px]">
                  {desc}
                </p>
                
                <!-- Footer -->
                <div class="flex items-center justify-between pt-4 border-t border-slate-100">
                  <span class="text-sm text-blue-600 font-medium flex items-center gap-1 group-hover:gap-2 transition-all">
                    Ver detalhes
                    <IconExternalLink className="w-4 h-4" />
                  </span>
                </div>
              </CardContent>
            </Card>
          </a>
        ))
      }
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <p class="text-slate-500 text-sm">
        Todos os plugins são gratuitos e de código aberto
      </p>
    </div>
  </div>
</section>
