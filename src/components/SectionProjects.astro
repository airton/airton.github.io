---
import { Card, CardContent } from "@/components/ui/card";
import { IconCode, IconArrowRight, IconExternalLink } from "@tabler/icons-react";
import { projects } from "../data/projects";
---

<section
  id="projects"
  class="w-full py-24 md:py-32 bg-white flex justify-center"
>
  <div class="container px-4 md:px-6 max-w-7xl">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-end justify-between mb-16 gap-6 text-left">
      <div class="max-w-2xl">
        <div class="inline-flex items-center gap-2 text-indigo-600 font-medium text-sm tracking-wider uppercase mb-3 text-left">
          <IconCode className="w-4 h-4" />
          Featured Work
        </div>
        <h2 class="text-4xl md:text-5xl font-bold tracking-tight text-slate-900 mb-4 text-left">
          Selected Projects
        </h2>
        <p class="text-lg text-slate-500 font-serif italic text-left">
          A collection of digital products and open-source initiatives built with precision and modern tech.
        </p>
      </div>
      <div class="hidden md:block">
        <p class="text-slate-400 text-sm max-w-[200px] text-right">
          Showcasing expertise in full-stack development and UI/UX design.
        </p>
      </div>
    </div>

    <!-- Projects Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
      {
        projects.map(({ name, desc, slug, image }) => (
          <a href={`/project/${slug}`} class="group block h-full">
            <Card className="h-full bg-white border-transparent shadow-[0_2px_15px_-3px_rgba(0,0,0,0.05),0_10px_20px_-2px_rgba(0,0,0,0.02)] hover:shadow-[0_20px_40px_-10px_rgba(0,0,0,0.1)] group-hover:-translate-y-2 transition-all duration-500 rounded-[2rem] overflow-hidden flex flex-col">
              <div class="relative aspect-[16/10] overflow-hidden">
                <img
                  src={`https://picsum.photos/id/${image}/800/500?grayscale`}
                  alt={name}
                  class="w-full h-full object-cover grayscale transition-all duration-700 group-hover:scale-105 group-hover:grayscale-0"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-slate-900/40 via-transparent to-transparent opacity-60 group-hover:opacity-20 transition-opacity"></div>
              </div>
              
              <CardContent className="p-8 flex-grow flex flex-col">
                <div class="flex items-center justify-between mb-4">
                  <h3 class="text-2xl font-bold text-slate-900 group-hover:text-indigo-600 transition-colors duration-300">
                    {name}
                  </h3>
                  <div class="p-2 bg-slate-50 rounded-full text-slate-400 group-hover:bg-indigo-50 group-hover:text-indigo-600 transition-all duration-300 transform group-hover:rotate-12">
                    <IconExternalLink className="w-5 h-5" />
                  </div>
                </div>
                
                <p class="text-slate-500 text-sm leading-relaxed line-clamp-2 mb-8 flex-grow">
                  {desc}
                </p>
                
                <!-- Footer -->
                <div class="flex items-center text-sm font-bold text-slate-900 mt-auto tracking-tight uppercase">
                  <span class="mr-2">Case Study</span>
                  <div class="h-px flex-grow bg-slate-100 mx-4 group-hover:bg-indigo-100 transition-colors"></div>
                  <IconArrowRight className="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300 text-indigo-500" />
                </div>
              </CardContent>
            </Card>
          </a>
        ))
      }
    </div>
  </div>
</section>
