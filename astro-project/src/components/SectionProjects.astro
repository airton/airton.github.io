---
import { Button } from "@/components/ui/button";
import { Card, CardContent } from "@/components/ui/card";
import { projects } from "../data/projects";
---

<section
  id="projects"
  class="w-full py-12 md:py-24 lg:py-32 bg-gray-100 dark:bg-gray-800 flex justify-center"
>
  <div class="container px-4 md:px-6">
    <h2
      class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl mb-8 text-center"
    >
      Meus Projetos
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        projects.map(({ name, desc, slug, image }) => (
          <Card
            key={slug}
            className="bg-white dark:bg-muted/70 border-foreground"
          >
            <CardContent className="p-4 pb-20 h-full !relative">
              <img
                src={`https://picsum.photos/id/${image}/300/200?grayscale`}
                alt={`Project ${name}`}
                class="rounded-lg object-cover w-full"
              />
              <h3 class="text-xl font-bold mt-4 mb-2">{name}</h3>
              <p class="text-stone-500 dark:text-stone-300 line-clamp-3">
                {desc}
              </p>
              <Button
                className="mt-4 absolute bottom-4"
                variant="outline"
                asChild
              >
                <a href={`/project/${slug}`}>Ver projeto</a>
              </Button>
            </CardContent>
          </Card>
        ))
      }
    </div>
  </div>
</section>
