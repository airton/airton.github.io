---
import Layout from "../../layouts/Layout.astro";
import { plugins } from "../../data/plugins";
import { Button } from "@/components/ui/button";
import { IconBrandWordpress, IconArrowLeft } from "@tabler/icons-react";

export async function getStaticPaths() {
  return plugins.map((plugin) => ({
    params: { slug: plugin.slug },
    props: { plugin },
  }));
}

const { plugin } = Astro.props;
---

<Layout>
  <div class="container px-4 md:px-6 py-10 max-w-4xl mx-auto">
    <a
      href="/"
      class="inline-flex items-center text-sm text-stone-500 hover:text-stone-900 dark:text-stone-400 dark:hover:text-stone-100 mb-6 transition-colors"
    >
      <IconArrowLeft className="mr-2 h-4 w-4" />
      Voltar para a home
    </a>

    <div class="flex flex-col md:flex-row gap-8 items-start mb-12">
      <div
        class="w-full md:w-auto flex-shrink-0 flex justify-center bg-gray-100 dark:bg-gray-800 rounded-xl p-8"
      >
        <IconBrandWordpress
          className="w-32 h-32 md:w-48 md:h-48 text-stone-700 dark:text-stone-300"
        />
      </div>
      <div class="space-y-4">
        <h1 class="text-3xl md:text-4xl font-bold tracking-tight">
          {plugin.name}
        </h1>
        <p class="text-xl text-stone-600 dark:text-stone-300">{plugin.desc}</p>
        <div class="flex gap-4">
          <Button size="lg" asChild>
            <a href={plugin.link} target="_blank" rel="noopener noreferrer">
              Baixar Plugin <IconBrandWordpress className="ml-2 h-5 w-5" />
            </a>
          </Button>
        </div>
      </div>
    </div>

    <div class="grid gap-12">
      <section class="prose dark:prose-invert max-w-none">
        <div set:html={plugin.fullDescription} />
      </section>

      <section>
        <h2 class="text-2xl font-bold mb-6 border-b pb-2">
          Principais Funcionalidades
        </h2>
        <ul class="grid md:grid-cols-2 gap-4">
          {
            plugin.features.map((feature) => (
              <li class="flex items-start bg-slate-50 dark:bg-slate-900 p-3 rounded-lg">
                <span class="mr-2 text-green-500">✔</span>
                <span>{feature}</span>
              </li>
            ))
          }
        </ul>
      </section>

      <section
        class="bg-slate-50 dark:bg-slate-900 p-6 rounded-xl border border-slate-200 dark:border-slate-800"
      >
        <h2 class="text-2xl font-bold mb-4">Instalação</h2>
        <div
          class="prose dark:prose-invert max-w-none"
          set:html={plugin.installation}
        />
      </section>

      {
        plugin.faq && plugin.faq.length > 0 && (
          <section>
            <h2 class="text-2xl font-bold mb-6">Perguntas Frequentes (FAQ)</h2>
            <div class="grid gap-6">
              {plugin.faq.map((item) => (
                <div class="border rounded-lg p-4">
                  <h3 class="font-bold text-lg mb-2">{item.question}</h3>
                  <p class="text-stone-600 dark:text-stone-300">
                    {item.answer}
                  </p>
                </div>
              ))}
            </div>
          </section>
        )
      }
    </div>
  </div>
</Layout>
